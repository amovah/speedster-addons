{
  "manifest_version": 2,
  "name": "Speedster",
  "version": "1.0",
  "description": "Speedster extension for integrating with Speedster desktop application",
  "homepage_url": "https://github.com/amovah/speedster-extension",
  "icons": {
    "256": "256x256.png"
  },
  "browser_action": {
    "default_icon": "256x256.png",
    "default_title": "Speedster",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "applications": {
    "gecko": {
      "id": "speedster-download-manager@example.org"
    }
  },
  "background": {
    "scripts": ["background/bundle.js"]
  }
}